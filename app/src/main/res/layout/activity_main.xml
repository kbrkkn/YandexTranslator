<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.kubra.translator.MainActivity"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imageViewBayrak1"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.38"
            app:srcCompat="@drawable/turkish" />

        <ImageView
            android:id="@+id/imageViewOk"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ok" />

        <ImageView
            android:id="@+id/imageViewBayrak2"
            android:layout_width="141dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/english" />
    </LinearLayout>

    <EditText
        android:id="@+id/editTextArananKelime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.34"
        android:ems="10"
        android:inputType="textPersonName"
   />

    <ImageView
        android:id="@+id/imageViewKelimeDinle"
        android:layout_width="64dp"
        android:layout_height="39dp"
        app:srcCompat="@drawable/listen" />

    <Button
        android:id="@+id/buttonCevir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Ã‡evir" />

    <TextView
        android:id="@+id/textViewSonuc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.33" />

    <ImageView
        android:id="@+id/imageViewSonucDinle"
        android:layout_width="64dp"
        android:layout_height="39dp"
        app:srcCompat="@drawable/listen" />

</LinearLayout>
